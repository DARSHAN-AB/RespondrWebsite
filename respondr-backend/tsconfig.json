{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2016",                                  /* Match frontend for consistency */
    "lib": ["esnext"],                                   /* Use ESNext for Node.js compatibility */

    /* Modules */
    "module": "commonjs",                                /* Node.js uses CommonJS */
    "moduleResolution": "node",                          /* Node.js module resolution */
    "rootDir": "./src",                                  /* Source files in src/ */
    "outDir": "./dist",                                  /* Output compiled JS to dist/ */
    "baseUrl": ".",                                      /* Enable absolute imports */
    "esModuleInterop": true,                             /* Support CommonJS interop */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent import casing */
    "resolveJsonModule": true,                           /* Allow importing JSON files */

    /* Type Checking */
    "strict": true,                                      /* Enable strict type checking */
    "noImplicitAny": true,                               /* Prevent implicit 'any' types */
    "strictNullChecks": true,                            /* Enforce null/undefined checks */
    "noUnusedLocals": true,                              /* Report unused local variables */
    "noUnusedParameters": true,                          /* Report unused parameters */
    "noImplicitReturns": true,                           /* Ensure functions return explicitly */
    "noFallthroughCasesInSwitch": true,                  /* Prevent switch case fallthrough */
    "skipLibCheck": true,                                /* Skip checking .d.ts files */

    /* Emit */
    "sourceMap": true,                                   /* Generate source maps for debugging */
    "declaration": true,                                 /* Generate .d.ts files */
    "allowSyntheticDefaultImports": true                 /* Allow default imports from CommonJS */
  },
  "include": ["src/**/*"],                             /* Include all TS files in src/ */
  "exclude": ["node_modules", "dist"]                  /* Exclude node_modules and compiled output */
}